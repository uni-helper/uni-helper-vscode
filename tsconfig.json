{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["**/*.js", "**/*.cjs", "**/*.mjs", "**/*.ts", "**/*.cts", "**/*.mts"],
  "exclude": ["**/node_modules", "**/dist"]
}
